<h1>Hello {{username}}</h1>

<div class="container">

    <div class = "up">
        <form id = "form">
            <label for="post">What are you thinking now?</label>
            <br><br>
            <textarea name="post" id="input" cols="30" rows="10"></textarea>    
            <br><br>
            <div id="msg"></div>  
            <button type="submit">Comment</button> 
        </form>
    </div>
    <div class = "down">
        <h3>Your comments here</h3>
        <div id="posts"></div>
            <div>
                <p>Comment 1</p>
                <span class = "options">
                    <i class="fas fa-edit"></i>
                    <i class="fas fa-trash-alt"></i>
                </span>
            </div>
            <div>
                <p>Comment 2</p>
                <span class = "options">
                    <i class="fas fa-edit"></i>
                    <i class="fas fa-trash-alt"></i>
                </span>
            </div>
    </div>
</div>