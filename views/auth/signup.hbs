<form action="/auth/signup" method="POST">
<br>
   <label> First Name
      <input type="text" name="first_name" required>
   </label><br>
      <label> Username
      <input type="text" name="username">
   </label><br>
      <label>Email
    <input type="email" name="email" />
  </label><br>

      <label> Password
      <input type="password" name="password">
